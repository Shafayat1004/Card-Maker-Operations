<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Scenes.SigninController">
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="389.0" prefWidth="880.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Signin">
               <font>
                  <Font size="31.0" />
               </font>
            </Label>
            <VBox alignment="CENTER_RIGHT" prefHeight="150.0" prefWidth="236.0" spacing="15.0">
               <children>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="93.0" text="Sign-in As" />
                        <ComboBox fx:id="userTypeSelectionCombobx" minWidth="150.0" prefWidth="150.0" visibleRowCount="5" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" spacing="20.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="84.0" text="User ID" />
                        <TextField fx:id="idTextField" minWidth="150.0" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="50.0" spacing="20.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="16.0" prefWidth="86.0" text="Password" />
                        <TextField fx:id="passwordTextField" minWidth="150.0" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Button fx:id="signinCheckButton" mnemonicParsing="false" onAction="#signinCheckButtonOnClick" text="Signin" />
            <Button fx:id="signupButton" mnemonicParsing="false" onAction="#signupButtonOnClick" text="Do not have an account? Click here!" />
            <Button fx:id="backToWelCome" mnemonicParsing="false" onAction="#backToWelComeOnClick" text="Go Back To Welcome Page" />
         </children>
         <BorderPane.margin>
            <Insets bottom="150.0" left="150.0" right="150.0" top="150.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
