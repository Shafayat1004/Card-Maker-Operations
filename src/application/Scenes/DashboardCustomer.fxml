<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Scenes.DashboardCustomerController">
   <top>
      <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Customer Dashboard">
               <font>
                  <Font size="35.0" />
               </font>
            </Label>
            <Label fx:id="locationLabel" text="Location:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="nameLabel" text="Name:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="idLabel" text="ID: ">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="signoutButton" mnemonicParsing="false" onAction="#signoutButtonOnClick" text="Signout" />
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TabPane prefHeight="592.0" prefWidth="1196.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            <Tab fx:id="noticeTab" text="Notice">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab fx:id="createNewOrderTab" text="Create New Order">
               <content>
                  <BorderPane>
                     <left>
                        <VBox alignment="CENTER" prefHeight="535.0" prefWidth="98.0" spacing="30.0" BorderPane.alignment="CENTER">
                           <children>
                              <VBox fillWidth="false" spacing="20.0">
                                 <children>
                                    <ComboBox fx:id="cardTypeCBox" minWidth="160.0" promptText="Card Type" />
                                    <ComboBox fx:id="paperTypeCBox" minWidth="160.0" promptText="Paper Type" />
                                    <ComboBox fx:id="noOfCardsCBox" minWidth="160.0" promptText="Number Of Cards" />
                                    <ComboBox fx:id="colorCBox" minWidth="160.0" promptText="Color" />
                                    <ComboBox fx:id="branchCBox" layoutX="10.0" layoutY="142.0" minWidth="160.0" prefWidth="160.0" promptText="To What Branch?" />
                                 </children>
                              </VBox>
                              <Button fx:id="seeSamplesButton" minWidth="160.0" mnemonicParsing="false" onAction="#seeSamplesButtonOnClick" text="See Our Samples" />
                              <Label text="Or Maybe," />
                              <Button fx:id="createCustomButton" minWidth="160.0" mnemonicParsing="false" onAction="#createCustomButtonOnClick" text="Create your own custom order!" textAlignment="CENTER" wrapText="true" />
                           </children>
                           <padding>
                              <Insets right="20.0" top="20.0" />
                           </padding>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </VBox>
                     </left>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <right>
                        <VBox alignment="TOP_CENTER" minWidth="300.0" prefHeight="575.0" prefWidth="400.0" spacing="15.0" BorderPane.alignment="CENTER">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Order Summary" textAlignment="CENTER">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Text>
                              <Label fx:id="cardTypeLabel" text="Card Type :  Not Selected" />
                              <Label fx:id="paperTypeLabel" layoutX="87.0" layoutY="54.0" text="Paper Type :  Not Selected" />
                              <Label fx:id="orderQuantityLabel" layoutX="83.0" layoutY="90.0" text="Order Quantity :  Not Selected" />
                              <Label fx:id="deliverByLabel" layoutX="71.0" layoutY="126.0" text="Deliver By : Not Selected" />
                              <Label fx:id="sampleTypeLabel" layoutX="139.0" layoutY="162.0" text="Sample Type: Not Selected" />
                              <Label maxWidth="250.0" text="Please Tell Us All The Details You Want Us To Work On Below!" textAlignment="CENTER" wrapText="true" />
                              <TextArea fx:id="orderNoteArea" prefHeight="200.0" prefWidth="280.0" wrapText="true" />
                              <Button fx:id="placeOrderButton" mnemonicParsing="false" onAction="#placeOrderButtonOnClick" text="Place Order" />
                              <Label layoutX="95.0" layoutY="144.0" maxWidth="250.0" text="Your Customer Service Employee and Designer will be assigned  to you after our branch Supervisor reviews this order! :)" textAlignment="CENTER" wrapText="true" />
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </VBox>
                     </right>
                  </BorderPane>
               </content>
            </Tab>
            <Tab fx:id="myOrderStatusTab" text="My Order Status">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab fx:id="fileComplaintTab" text="File A Complaint">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab fx:id="personalInfoTab" text="Personal Information">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
